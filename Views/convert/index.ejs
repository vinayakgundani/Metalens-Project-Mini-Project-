<link rel="stylesheet" href="/CSS/analytics.css">

<h2 class="analytics-title">Image Format Converter</h2>

<div class="upload-section">
    <div class="upload-box">

        <form action="/convert/process" method="POST" enctype="multipart/form-data">

            <label class="upload-label">Upload an Image</label>
            <input type="file" name="image" required class="form-control upload-input">

            <label class="upload-label mt-3">Select Output Format</label>
            <select name="format" class="form-control upload-input" required>
                <option value="jpg">JPG</option>
                <option value="png">PNG</option>
                <option value="webp">WEBP</option>
            </select>

            <button class="analyze-btn">Convert</button>
        </form>

    </div>
</div>
